<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.article">

	
	<insert id="insert" parameterType="java.util.HashMap">
	<![CDATA[
		insert into 
	]]>
		<foreach collection="list" item="item" > 
	            <if test="item.now != null">
	            		${item.now}
	            </if>
	        </foreach>

	(name,price,quantity) values
	        <foreach collection="list" item="item" separator=","> 
	            <if test="item.name != null and item.price != null and item.quantity != null">
	            		('${item.name}', ${item.price}, ${item.quantity})
	            </if>
	        </foreach>
	 </insert>
	 
	 <select id="create_table" parameterType="java.util.HashMap">
	 	${create_table}
	 </select>
	 
	 <!-- 전체 테이블 리스트 -->
	<select id="listAll" resultType="String">
	    <![CDATA[
			show tables
		]]>
	</select>
	
	<!-- 테이블 상세 조회 -->
	<select id="article" parameterType="String" resultType="java.util.HashMap" >
	    <![CDATA[
			SELECT * 
			 FROM ${tableName}	 
		]]>
	</select>
</mapper>